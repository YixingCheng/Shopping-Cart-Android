<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDD"
        >

    <!-- The main content view -->

    <fragment
            android:name="com.suqareapps.Shopping_Cart.AlertFragment"
            android:id="@+id/alert_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <fragment
            android:name="com.suqareapps.Shopping_Cart.CategoryFragment"
            android:id="@+id/category_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <fragment
            android:name="com.suqareapps.Shopping_Cart.ShopsFragment"
            android:id="@+id/shops_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <ListView
            android:id="@+id/drawer_list"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#333"
            android:choiceMode="singleChoice" />

</android.support.v4.widget.DrawerLayout>